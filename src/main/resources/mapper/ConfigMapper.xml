<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ahdark.code.link.dao.ConfigMapper">
    <select id="get" useCache="true" resultType="com.ahdark.code.link.pojo.SiteConfig"
            parameterType="com.ahdark.code.link.pojo.SiteConfig" flushCache="false">
        SELECT * from config
        <where>
            <if test='name != null and name != ""'>
                `name`=#{name}
            </if>
        </where>
    </select>
    <update id="set" flushCache="true" parameterType="com.ahdark.code.link.pojo.SiteConfig">
        UPDATE config
        <set>
            `value`=#{value}
        </set>
        <where>
            `name`=#{name}
        </where>
    </update>
</mapper>
